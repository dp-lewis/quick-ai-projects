---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Contact - Get in Touch"
  description="Connect with me to discuss AI-assisted development, collaboration opportunities, or to learn more about rapid prototyping techniques."
>
  <section class="contact-hero">
    <h1 class="page-title">Let's Connect</h1>
    <p class="page-description">
      Interested in AI-assisted development? Have questions about my projects? 
      Let's discuss collaboration opportunities or share insights about rapid prototyping.
    </p>
  </section>

  <section class="contact-content">
    <div class="contact-grid">
      <!-- Contact Form -->
      <div class="contact-form-section">
        <h2>Send a Message</h2>
        <form class="contact-form" id="contact-form">
          <div class="form-group">
            <label for="name">Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required 
              placeholder="Your full name"
            />
          </div>
          
          <div class="form-group">
            <label for="email">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required 
              placeholder="your.email@example.com"
            />
          </div>
          
          <div class="form-group">
            <label for="subject">Subject</label>
            <select id="subject" name="subject" required>
              <option value="">Select a topic</option>
              <option value="collaboration">Collaboration Opportunity</option>
              <option value="ai-development">AI-Assisted Development</option>
              <option value="project-inquiry">Project Inquiry</option>
              <option value="general">General Question</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="message">Message</label>
            <textarea 
              id="message" 
              name="message" 
              required 
              placeholder="Tell me about your project, question, or how we might collaborate..."
              rows="6"
            ></textarea>
          </div>
          
          <button type="submit" class="submit-btn">
            <span class="btn-text">Send Message</span>
            <span class="btn-loading">Sending...</span>
          </button>
        </form>
        
        <div class="form-status" id="form-status"></div>
      </div>

      <!-- Contact Info -->
      <div class="contact-info-section">
        <h2>Get in Touch</h2>
        
        <div class="contact-methods">
          <a href="mailto:hello@example.com" class="contact-method">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="method-content">
              <h3>Email</h3>
              <p>hello@example.com</p>
            </div>
          </a>
          
          <a href="https://linkedin.com/in/example" target="_blank" rel="noopener" class="contact-method">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                <rect x="2" y="9" width="4" height="12"/>
                <circle cx="4" cy="4" r="2"/>
              </svg>
            </div>
            <div class="method-content">
              <h3>LinkedIn</h3>
              <p>Professional networking</p>
            </div>
          </a>
          
          <a href="https://github.com/example" target="_blank" rel="noopener" class="contact-method">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/>
              </svg>
            </div>
            <div class="method-content">
              <h3>GitHub</h3>
              <p>View my code and projects</p>
            </div>
          </a>
          
          <a href="https://twitter.com/example" target="_blank" rel="noopener" class="contact-method">
            <div class="method-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"/>
              </svg>
            </div>
            <div class="method-content">
              <h3>Twitter</h3>
              <p>Follow for AI dev updates</p>
            </div>
          </a>
        </div>
        
        <div class="availability">
          <h3>Availability</h3>
          <p>
            I'm always interested in discussing AI-assisted development, sharing knowledge, 
            and exploring collaboration opportunities. I typically respond within 24-48 hours.
          </p>
        </div>
        
        <div class="interests">
          <h3>Let's talk about:</h3>
          <ul class="interests-list">
            <li>AI-assisted development techniques</li>
            <li>Rapid prototyping strategies</li>
            <li>Code generation best practices</li>
            <li>Open source collaboration</li>
            <li>Future of AI in software development</li>
            <li>Project consulting opportunities</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="faq-section">
    <h2 class="section-title">Frequently Asked Questions</h2>
    
    <div class="faq-grid">
      <div class="faq-item">
        <h3>How much of your code is really AI-generated?</h3>
        <p>
          Approximately 90% of the code is generated using AI tools like GitHub Copilot, ChatGPT, 
          and Claude. However, I provide the architecture decisions, review all generated code, 
          and make necessary refinements to ensure quality and functionality.
        </p>
      </div>
      
      <div class="faq-item">
        <h3>Can you help with my project?</h3>
        <p>
          I'm open to consulting on AI-assisted development approaches, rapid prototyping strategies, 
          and code review. Feel free to reach out with your project details and I'll let you know 
          how I might be able to help.
        </p>
      </div>
      
      <div class="faq-item">
        <h3>Do you offer training or workshops?</h3>
        <p>
          I'm interested in sharing knowledge about AI-assisted development through workshops, 
          talks, or one-on-one sessions. Contact me to discuss your needs and we can explore 
          possibilities.
        </p>
      </div>
      
      <div class="faq-item">
        <h3>What's your typical project timeline?</h3>
        <p>
          For the showcase projects, I aim for 2-4 hours from concept to deployment. For consulting 
          or collaborative projects, timelines vary based on scope and complexity. Let's discuss 
          your specific needs.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Contact Hero */
  .contact-hero {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-title {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #ffd89b 0%, #19547b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .page-description {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* Contact Content */
  .contact-content {
    margin-bottom: 6rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  /* Contact Form */
  .contact-form-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 2rem;
  }

  .contact-form {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    color: white;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    color: white;
    font-size: 1rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.3);
  }

  .form-group select option {
    background: #333;
    color: white;
  }

  .submit-btn {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .submit-btn:hover:not(:disabled) {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .btn-loading {
    display: none;
  }

  .submit-btn.loading .btn-text {
    display: none;
  }

  .submit-btn.loading .btn-loading {
    display: inline;
  }

  .form-status {
    margin-top: 1rem;
    padding: 1rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
    display: none;
  }

  .form-status.success {
    background: rgba(34, 197, 94, 0.2);
    color: #22c55e;
    border: 1px solid rgba(34, 197, 94, 0.3);
    display: block;
  }

  .form-status.error {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.3);
    display: block;
  }

  /* Contact Info */
  .contact-info-section h2 {
    font-size: 2rem;
    font-weight: 700;
    color: white;
    margin-bottom: 2rem;
  }

  .contact-methods {
    margin-bottom: 3rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    margin-bottom: 1rem;
    text-decoration: none;
    color: white;
    transition: all 0.3s ease;
  }

  .contact-method:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateX(5px);
  }

  .method-icon {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 0.75rem;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .method-content h3 {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .method-content p {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
  }

  .availability,
  .interests {
    background: rgba(255, 255, 255, 0.05);
    border-left: 4px solid;
    border-image: linear-gradient(135deg, #667eea 0%, #764ba2 100%) 1;
    padding: 1.5rem;
    border-radius: 0 8px 8px 0;
    margin-bottom: 2rem;
  }

  .availability h3,
  .interests h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .availability p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  .interests-list {
    list-style: none;
    padding: 0;
  }

  .interests-list li {
    color: rgba(255, 255, 255, 0.8);
    padding: 0.5rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .interests-list li:before {
    content: "→";
    position: absolute;
    left: 0;
    color: #667eea;
    font-weight: bold;
  }

  /* FAQ Section */
  .faq-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: white;
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .faq-item {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    padding: 2rem;
  }

  .faq-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
    margin-bottom: 1rem;
  }

  .faq-item p {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.6;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-title {
      font-size: 2rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .faq-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Contact form handling
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = form?.querySelector('.submit-btn') as HTMLButtonElement;
    const formStatus = document.getElementById('form-status') as HTMLElement;

    if (form && submitBtn && formStatus) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Show loading state
        submitBtn.classList.add('loading');
        submitBtn.disabled = true;
        formStatus.style.display = 'none';
        
        // Simulate form submission (replace with actual endpoint)
        try {
          // In a real implementation, you would send this to your backend
          const formData = new FormData(form);
          
          // Simulate network delay
          await new Promise(resolve => setTimeout(resolve, 2000));
          
          // Simulate success (replace with actual API call)
          const success = true; // Math.random() > 0.3;
          
          if (success) {
            formStatus.textContent = 'Message sent successfully! I\'ll get back to you soon.';
            formStatus.className = 'form-status success';
            form.reset();
          } else {
            throw new Error('Failed to send message');
          }
        } catch (error) {
          formStatus.textContent = 'Failed to send message. Please try again or email me directly.';
          formStatus.className = 'form-status error';
        } finally {
          // Reset button state
          submitBtn.classList.remove('loading');
          submitBtn.disabled = false;
        }
      });
    }
  });
</script>